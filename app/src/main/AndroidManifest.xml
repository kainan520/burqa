<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.mvvm.lux.burqa">

    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:name="com.mvvm.lux.framework.BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.home.activity.SplashActivity"
            android:theme="@style/ThemeAppLaucher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.home.activity.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"/>
        <activity android:name=".ui.home.activity.ImagePicsListActivity"
                  android:configChanges="orientation|keyboardHidden|screenSize"
                  android:theme="@style/swipeback_activity_style"/>   <!--保证横竖屏切换的时候生命周期只调用onConfigurationChanged()-->
        <activity android:name=".ui.home.activity.ComicDesActivity"
                  android:configChanges="orientation|keyboardHidden|screenSize"
                  android:theme="@style/swipeback_activity_style"/>
        <activity android:name=".ui.home.activity.ComicClassifyActivity"
                  android:configChanges="orientation|keyboardHidden|screenSize"
                  android:theme="@style/swipeback_activity_style"/>
        <activity android:name=".ui.home.activity.SearchActivity"
                  android:configChanges="orientation|keyboardHidden|screenSize"
                  android:theme="@style/swipeback_activity_style"/>
    </application>

</manifest>